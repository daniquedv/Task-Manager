<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ChoiceBox?>

<VBox alignment="CENTER"
      style="-fx-padding: 20;"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.taskmanager.controller.HomeScreenController" >

    <Label text="Task Manager" style="-fx-font-size: 24px; -fx-font-weight: bold;" alignment="TOP_CENTER" prefHeight="50" minWidth="-Infinity"/>

    <HBox spacing="20" alignment="TOP_CENTER" >
        <Button text="Create task" onAction="#onCreateTaskClick" prefWidth="100"/>
        <Button text="Clear tasklist" onAction="#onClearTasklistClick" prefWidth="100"/>
    </HBox>

    <HBox spacing="20">
        <VBox>
            <Label text="Filter by status: "/>
            <ChoiceBox fx:id="statusFilterChoiceBox" prefWidth="100"/>
        </VBox>
        <VBox>
            <Label text="Filter by category: "/>
            <ChoiceBox fx:id="categoryFilterChoiceBox" prefWidth="100"/>
        </VBox>
        <VBox>
            <Label text="Sort by: "/>
            <ChoiceBox fx:id="sortingChoiceBox" prefWidth="100"/>
        </VBox>

        <Button text="Apply Filters" prefWidth="100" />
        <Button text="Reset Filters"  prefWidth="100"/>

    </HBox>

    <ScrollPane fx:id="taskListScrollPane" prefHeight="560" maxWidth="560" >
        <VBox fx:id="taskListContainer" spacing="5"/>
    </ScrollPane>

</VBox>