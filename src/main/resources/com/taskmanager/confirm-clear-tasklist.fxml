<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taskmanager.controller.ConfirmClearTasklistController"
            prefHeight="150.0" prefWidth="250.0"
            style="-fx-padding: 20;"
            spacing="20"
            alignment="CENTER">

    <Text text="Confirm Clear Tasklist" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Text text="Are you sure you want to clear the tasklist?" style="-fx-font-size: 12px;"/>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirmClick" layoutX="20.0" layoutY="100.0" prefWidth="100.0"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancelClick" layoutX="150.0" layoutY="100.0" prefWidth="100.0"/>
    </HBox>

</VBox>